<Directory /var/www/html/>
    Options +FollowSymLinks
    AllowOverride None
    Require all granted

    RewriteEngine On

    # Donâ€™t rewrite existing files or directories
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Everything else goes to index.php
    RewriteRule ^ index.php [L]
</Directory>

# Fix 404-issue with (api|rest)\.php
AliasMatch (?i)^/[^/]+/(api|rest)\.php(.*)$ /var/www/html/$1.php$2

# Optional alias for /w/ if you want explicit mapping
Alias /w/ /var/www/html/

RemoteIPHeader X-Forwarded-For
RemoteIPTrustedProxy 127.0.0.1 10.88.0.0/16 169.254.0.0/16
